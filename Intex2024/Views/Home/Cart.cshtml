@{
}
@model Intex2024.Models.ViewModels.CartViewModel

<h2>Your Cart</h2>
<table class="table table-bordered table-striped">
    <thead>
    <tr>
            <th>Product</th>
            <th>Product Name</th>
            <th>Quantity</th>
            <th class="text-right">Amount</th>
            <th class="text-right">Subtotal</th>
    </tr>
    </thead>

    <tbody>

        @for (int i = 0; i < Model.LineItems.Count(); i++)
        {
            <tr>
                <td class="text-left"><img src="@Model.Products.ToList()[i].ImgLink" class="card-img-top w-25 equal-height" alt="..."></td>
                <td class="text-left">@Model.Products.ToList()[i].Name</td>
                <td class="text-left">@Model.LineItems.ToList()[i].Qty</td>
                <td class="text-right">@Model.Products.ToList()[i].Price.ToString("C")</td>
                <td class="text-right">@((Model.LineItems.ToList()[i].Qty * Model.Products.ToList()[i].Price).ToString("c"))</td>

            </tr>
        }

        
    </tbody>

    <tfoot>
    <tr>
        <td colspan="4" class="text-right">Total:</td>
            <td class="text-right">$@Model.cart.Total.00</td>
    </tr>
    </tfoot>
</table>

<div class="text-center">
    <a class="btn btn-secondary" href="@Url.Action("Index", "Home")#scroll">Continue Shopping</a>
    <form asp-controller="Home" asp-action="Checkout" method="get">
        <input type="hidden" name="CustomerId" value="@Model.cust.CustomerId" />
        <button type="submit" class="btn btn-primary">Checkout</button>
    </form>
</div>