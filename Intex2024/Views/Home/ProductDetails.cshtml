@using Intex2024.Infrastructure;
@{
    ViewData["Title"] = "Product Details";
}
@model Product

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImgLink" class="img-fluid" alt="Product Image">
            <div class="mt-3">
                <h2 class="mb-0">Related Products:</h2>
                <div class="row mt-3">
                    <div class="col-4">
                        <img src="@Model.ImgLink" class="img-fluid" alt="Related Product 1">
                    </div>
                    <div class="col-4">
                        <img src="@Model.ImgLink" class="img-fluid" alt="Related Product 2">
                    </div>
                    <div class="col-4">
                        <img src="@Model.ImgLink" class="img-fluid" alt="Related Product 3">
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <h1>@Model.Name</h1>
            <h2>@Model.Category1</h2>
            <h3>$@Model.Price</h3>
            <div class="dropdown">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown">
                    Quantity: 1
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item" href="#">Quantity: 2</a>
                    <a class="dropdown-item" href="#">Quantity: 3</a>
                    <a class="dropdown-item" href="#">Quantity: 4</a>
                </div>
            </div>
            <form id=@Model.ProductId method="post" asp-page="/Cart">
                <input type="hidden" asp-for="ProductId" />
                <input type="hidden" name="returnUrll" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                <button type="submit" class="btn-outline-success btn-sm float-end">Add to Cart</button>
            </form>

            <div class="mt-4 description">
                <h2>Description:</h2>
                <div>@Model.Description</div>
            </div>
        </div>
    </div>
</div>

