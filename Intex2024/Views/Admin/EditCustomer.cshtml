@model Customer

<div class="container">
    <div class="text-center">
        <form method="post">
            <div asp-validation-summary="All"></div>
            <input type="hidden" asp-for="CustomerId" />
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="FirstName" class="form-label">First Name</label>
                            <input type="text" class="form-control" asp-for="FirstName" placeholder="">
                        </div>
                        <div class="mb-3">
                            <label asp-for="LastName" class="form-label">Last Name</label>
                            <input type="text" class="form-control" asp-for="LastName" placeholder="">
                        </div>
                        <div class="mb-3">
                            <label asp-for="BirthDate" class="form-label">Birth Date</label>
                            <input type="date" class="form-control" asp-for="BirthDate" placeholder="">
                        </div>
                        <div class="mb-3">
                            <label asp-for="Age" class="form-label">Age</label>
                            <input type="number" class="form-control" asp-for="Age" placeholder="">
                        </div>
                        <div class="mb-3">
                            <label asp-for="CountryOfResidence" class="form-label">Country of Residence</label>
                            <select class="form-control" asp-for="CountryOfResidence" placeholder="">
                                <option value="USA">USA</option>
                                <option value="Russia">Russia</option>
                                <option value="United Kingdom">United Kingdom</option>
                                <option value="India">India</option>
                                <option value="China">China</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Gender" class="form-label">Gender</label>
                            <select class="form-control" asp-for="CountryOfResidence" placeholder="">
                                <option value="M">Male</option>
                                <option value="F">Female</option>
                                <option value="N">Not Listed</option>                                
                            </select>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <a asp-controller="Admin" asp-action="ViewCust" class="btn btn-outline-secondary">Cancel</a>
                <br />
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>


        </form>

    </div>
</div>