@model Transaction

<div class="text-center">
    <form method="post">
        <div asp-validation-summary="All"></div>
        <input type="hidden" asp-for="TransactionId" />
        <div class="mb-3">
            <label asp-for="Date" class="form-label">Date</label>
            <input type="date" class="form-control" asp-for="Date" placeholder="">
        </div>
        <div class="mb-3">
            <label asp-for="DayOfWeek" class="form-label">Day of the week</label>
            <input type="text" class="form-control" asp-for="DayOfWeek" placeholder="">
        </div>
        <div class="mb-3">
            <label asp-for="Time" class="form-label">Time</label>
            <input type="number" class="form-control" asp-for="Time" placeholder="">
        </div>
        <div class="mb-3">
            <label asp-for="EntryMode" class="form-label">Entry Mode</label>
            <input type="text" class="form-control" asp-for="EntryMode" placeholder="">
        </div>
        <div class="mb-3">
            <label asp-for="Amount" class="form-label">Transaction Amount</label>
            <input type="number" class="form-control" asp-for="Amount" placeholder="">
        </div>
        <div class="mb-3">
            <label asp-for="TypeOfTransaction" class="form-label">Type of Transaction</label>
            <input type="text" class="form-control" asp-for="TypeOfTransaction" placeholder="">
        </div>
        <div class="mb-3">
            <label asp-for="CountryOfTransaction" class="form-label">Country of Transaction</label>
            <input type="text" class="form-control" asp-for="CountryOfTransaction" placeholder="">
        </div>
        <div class="mb-3">
            <label asp-for="ShippingAddress" class="form-label">Shipping Address</label>
            <input type="text" class="form-control" asp-for="ShippingAddress" placeholder="Name">
        </div>
        <div class="mb-3">
            <label asp-for="Bank" class="form-label">Bank</label>
            <input type="text" class="form-control" asp-for="Bank" placeholder="Name">
        </div>
        <div class="mb-3">
            <label asp-for="TypeOfCard" class="form-label">Type of Card</label>
            <input type="text" class="form-control" asp-for="TypeOfCard" placeholder="Name">
        </div>
        <div class="mb-3">
            <label asp-for="Fraud" class="form-label">Fraud</label>
            <input type="checkbox" class="form-control" asp-for="Fraud" placeholder="Name">
        </div>

        <div class="row">
            <a asp-controller="Admin" asp-action="ViewOrders" class="btn btn-outline-secondary">Cancel</a>
            <button type="submit" class="btn btn-primary">Save Changes</button>
        </div>


    </form>

</div>