@model Transaction

<div class="card m-1 p-1">
    <div class="row">
        <div class="col">
            <h6>@Model.TransactionId</h6>
        </div>
        <div class="col">
            <p>@Model.Date</p>
        </div>
        <div class="col">
            <p>$@Model.Amount</p>
        </div>
        <div class="col">
            @if (Model.Fraud == false)
            {
                <p>No</p>
            }
            else
            {
                <p>Yes</p>
            }

        </div>
        <div class="col">
            <a class="btn btn-primary" asp-controller="Admin" asp-action="EditOrder" asp-route-id="@Model.TransactionId">Edit</a>
            <button class="btn btn-danger">Delete</button>
        </div>
    </div>
</div>
