@model Product

<a href="@Url.Action("ProductDetails", "Home", new { id = Model.ProductId })" class="product-link">
    <div class="card m-1 p-1">
        <div class="row">
            <img src="@Model.ImgLink" class="card-img-top w-25 equal-height" alt="...">
            <div class="col">
                <h3>@Model.Name</h3>
                <h3>@Model.Price</h3>
            </div>

        </div>
    </div>
</a>
